<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_animation_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Android Progress相关动画使用案例"
        android:textColor="@color/colorAccent" />

    <com.androidanimation.progressanim.sample1.MultiProcessStateView
        android:id="@+id/multi_progress_state_view"
        android:layout_width="@dimen/multi_progress_view_size"
        android:layout_height="@dimen/multi_progress_view_size"
        android:layout_gravity="center_horizontal"
        android:background="#ff0583f7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/multi_progress_complete_success"
            style="@style/button_style_white_bg"
            android:layout_weight="1"
            android:text="成功动画" />

        <Button
            android:id="@+id/multi_progress_complete_fail"
            style="@style/button_style_white_bg"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="失败动画" />

        <Button
            android:id="@+id/multi_progress_smoothscroll"
            style="@style/button_style_white_bg"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="跳到80%" />
    </LinearLayout>

    <Button
        android:id="@+id/multi_progress_jump_normal"
        style="@style/button_style_white_bg"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:text="在普通View中实现此动画" />
</LinearLayout>
